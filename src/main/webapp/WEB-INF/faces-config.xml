<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <managed-bean>
  <managed-bean-name>bets</managed-bean-name>
  <managed-bean-class>bean.BetsBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>login</managed-bean-name>
  <managed-bean-class>bean.LoginBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <navigation-rule>
  <display-name>main.xhtml</display-name>
  <from-view-id>/main.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>find</from-outcome>
   <to-view-id>/FindQuestions.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>main.xhtml</display-name>
  <from-view-id>/main.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>create</from-outcome>
   <to-view-id>/CreateQuestion.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>CreateQuestion.xhtml</display-name>
  <from-view-id>/CreateQuestion.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>atzera</from-outcome>
   <to-view-id>/main.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>FindQuestions.xhtml</display-name>
  <from-view-id>/FindQuestions.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>atzera</from-outcome>
   <to-view-id>/main.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>landingPage.xhtml</display-name>
  <from-view-id>/landingPage.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>login</from-outcome>
   <to-view-id>/login.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>landingPage.xhtml</display-name>
  <from-view-id>/landingPage.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>register</from-outcome>
   <to-view-id>/register.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>login.xhtml</display-name>
  <from-view-id>/login.xhtml</from-view-id>
  <navigation-case>
  	<from-outcome>aurrera</from-outcome>
   <to-view-id>/main.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <display-name>register.xhtml</display-name>
  <from-view-id>/register.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>atzera</from-outcome>
   <to-view-id>/landingPage.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
</faces-config>
